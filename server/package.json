{
  "name": "makedle-server",
  "version": "1.0.0",
  "description": "express server for makdele client",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon src/index.ts",
    "lint": "npx eslint . --ignore-pattern 'dist/*'",
    "lint:fix": "npx eslint . --ignore-pattern 'dist/* --fix",
    "start": "node dist/index.js",
    "seed-db": "psql postgres -f src/db/schema.sql",
    "test": "jest",
    "test:silent": "jest --silent --coverage=false",
    "start:prod": "pm2 start dist/index.js --name makedle",
    "stop:prod": "pm2 stop makedle",
    "restart:prod": "pm2 restart makedle",
    "logs:prod": "pm2 logs makedle"
  },
  "author": "jon-zawada",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.13.1",
    "pm2": "^6.0.8",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.13",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.8.4",
    "@types/pg": "^8.11.10",
    "eslint": "^9.14.0",
    "globals": "^15.11.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2"
  }
}
